<UserControl x:Class="Cuculidae.AlarmSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cuculidae"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="380">
    <Grid Margin="3,0,-3,0">
        <TextBox Width="100" Height="64" Margin="0,0,280,0" TextChanged="Hour_TextChanged" PreviewTextInput="NumberValidationTextBox"></TextBox>
        <TextBox Width="100" Height="64" Margin="140,0,140,0" TextChanged="Minute_TextChanged" PreviewTextInput="NumberValidationTextBox"></TextBox>
        <TextBox Width="100" Height="64" Margin="280,0,0,0" TextChanged="Second_TextChanged" PreviewTextInput="NumberValidationTextBox"></TextBox>
    </Grid>
</UserControl>
